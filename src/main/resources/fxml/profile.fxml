<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TreeTableColumn?>
<?import javafx.scene.control.TreeTableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.user.ProfileController">
    <children>
        <Button fx:id="marketButton" layoutX="24.0" layoutY="30.0" mnemonicParsing="false" onAction="#marketButtonClicked" prefHeight="25.0" prefWidth="149.0" text="Market" />
        <TreeTableView fx:id="sneakerTable" layoutX="24.0" layoutY="81.0" prefHeight="200.0" prefWidth="552.0">
            <columns>
                <TreeTableColumn fx:id="idColumn" prefWidth="75.0" text="ID" />
                <TreeTableColumn fx:id="nameColumn" prefWidth="126.0" text="Name" />
                <TreeTableColumn fx:id="sizeColumn" prefWidth="77.0" text="Size" />
                <TreeTableColumn fx:id="conditionColumn" prefWidth="144.0" text="Condition" />
                <TreeTableColumn fx:id="priceColumn" prefWidth="128.0" text="Price" />
            </columns>
        </TreeTableView>
        <Button fx:id="editButton" layoutX="44.0" layoutY="287.0" mnemonicParsing="false" onAction="#editButtonClicked" prefHeight="25.0" prefWidth="149.0" text="Edit Price" />
        <TextField fx:id="idText" layoutX="44.0" layoutY="323.0" promptText="ID" />
        <TextField fx:id="priceText" layoutX="44.0" layoutY="355.0" promptText="Updated price" />
        <Button fx:id="deleteButton" layoutX="216.0" layoutY="323.0" mnemonicParsing="false" onAction="#deleteButtonClicked" prefHeight="25.0" prefWidth="149.0" text="Delete by ID" />
        <Button fx:id="addButton" layoutX="390.0" layoutY="323.0" mnemonicParsing="false" onAction="#addButtonClicked" prefHeight="25.0" prefWidth="149.0" text="Add Pair" />
        <Label layoutX="398.0" layoutY="17.0" prefHeight="52.0" prefWidth="188.0" text="MySneakers" textFill="#09a706">
            <font>
                <Font size="34.0" />
            </font>
        </Label>
    </children>
</AnchorPane>